<Window x:Class="XamlTutorialLearning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XamlTutorialLearning"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="50,0,50,0">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Name:" Margin="3" TextAlignment="Right" Grid.Row="0" Grid.Column="0"/>
        <TextBlock Text="{Binding Name}" Margin="3" TextAlignment="Left" Grid.Row="0" Grid.Column="1" />
        <TextBlock Text="Title:" Margin="3" TextAlignment="Right" Grid.Row="1" Grid.Column="0"/>
        <TextBlock Text="{Binding Title}" Margin="3" TextAlignment="Left" Grid.Row="1" Grid.Column="1" />

    </Grid>
</Window>
